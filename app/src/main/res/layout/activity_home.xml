<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tri_wp"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/links"
        android:fontFamily="@font/blackpine"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="170dp"/>

    <ImageView
        android:id="@+id/instagramB"
        app:srcCompat="@drawable/instagram_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:textColor="@color/white"
        android:fontFamily="@font/blackpine"
        android:textSize="50sp"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/facebookB"
        app:srcCompat="@drawable/facebook_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/instagramB"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:layout_toRightOf="@+id/instagramB" />

    <android.widget.Button
        android:id="@+id/logoutB"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/logout_button"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/quicksand_bold"
        android:paddingLeft="10dp"
        android:background="@drawable/logout_button"
        android:elevation="6dp"
        android:outlineAmbientShadowColor="@color/black"
        android:drawableStart="@drawable/ic_logout"
        android:drawableTint="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/ic_logout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/fuchsia"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>